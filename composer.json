{
    "name": "rtp/smarty",
    "description": "Smarty Templating Engine for TYPO3",
    "type": "typo3-cms-extension",
    "homepage": "https://github.com/rtp-ch/smarty",
    "extra": {
        "installer-name": "smarty",
        "typo3/cms": {
            "Package": {
                "protected": true,
                "partOfFactoryDefault": false,
                "partOfMinimalUsableSystem": false
            }
        }
    },
    "keywords": ["templating"],
    "version": "2.0.0",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Simon Tuck",
            "email": "stu@rtp.ch"
        }
    ],
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "smarty/smarty": "3.1.18",
        "michelf/php-markdown" : "*",
        "php": ">=5.3.2",
        "nickcernis/html-to-markdown": "dev-master",
        "digitalnature/php-ref": "dev-master"
    }
}
