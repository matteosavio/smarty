{
    "name": "RTP/smarty",
    "description": "Smarty Templating Engine for TYPO3",
    "type": "typo3-module",
    "extra": {
        "installer-name": "smarty"
    },
    "keywords": ["templating"],
    "version": "2.0.0-beta.3",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Simon Tuck",
            "email": "stu@rtp.ch"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rtp-ch/smarty.git"
    },
    "autoload": {
        "classmap": [
            "vendor/nickcernis/html2markdown/",
            "vendor/digitalnature/php-ref/"
        ]
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "nickcernis/html2markdown",
                "version": "1.0.1",
                "source": {
                    "url": "https://github.com/nickcernis/html2markdown.git",
                    "type": "git",
                    "reference": "master"
                },
                "dist": {
                    "url": "https://github.com/nickcernis/html2markdown/archive/master.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "digitalnature/php-ref",
                "version": "1.0.0",
                "source": {
                    "url": "https://github.com/digitalnature/php-ref.git",
                    "type": "git",
                    "reference": "master"
                },
                "dist": {
                    "url": "https://github.com/digitalnature/php-ref/archive/master.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "smarty/smarty": "3.1.13",
        "michelf/php-markdown" : "1.3-rc2",
        "php": ">=5.3.4",
        "nickcernis/html2markdown": "*",
        "digitalnature/php-ref": "*"
    }
}
